@using SoundEquipment.Models
@model UserPO
@{
    ViewBag.Title = "CreateUser";
}

<h2>Create new user</h2>

@using (Html.BeginForm("CreateUser", "User", FormMethod.Post))
{
    @Html.LabelFor(model => Model.RoleID)
    @Html.DropDownListFor(model => Model.RoleID,
            new SelectList(new List<SelectListItem>
            {
new SelectListItem { Text = "Regular user", Value = "1" },
new SelectListItem { Text = "Power user", Value = "2" },
new SelectListItem { Text = "Administrator", Value = "3" },
            },
            "Value", "Text"),
            new { @class = "form-control" })

    @Html.LabelFor(model => Model.Username)
    @Html.TextBoxFor(model => Model.Username, new { @class = "form-control" })

    @Html.LabelFor(model => Model.Password)
    @Html.PasswordFor(model => Model.Password, new { @class = "form-control" })

    @Html.LabelFor(model => Model.PasswordConfirm)
    @Html.PasswordFor(model => Model.PasswordConfirm, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => Model.PasswordConfirm)

    <br />

    @Html.LabelFor(model => Model.FirstName, "First name")
    @Html.TextBoxFor(model => Model.FirstName, new { @class = "form-control" })

    @Html.LabelFor(model => Model.LastName, "Last name")
    @Html.TextBoxFor(model => Model.LastName, new { @class = "form-control" })

    @Html.LabelFor(model => Model.Email)
    @Html.TextBoxFor(model => Model.Email, new { @class = "form-control" })

    @Html.LabelFor(model => Model.PhoneNumber, "Phone number")
    @Html.TextBoxFor(model => Model.PhoneNumber, new { @class = "form-control" })

    <input type="submit" value="Create new user" />
}

